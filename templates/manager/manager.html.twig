{% extends 'base.html.twig' %}

{% block title %}Hello ManagerController!{% endblock %}

{% block body %}
    <p>Manager Name : {{ managerName.firstname }} {{ managerName.lastname }}</p>
<h1> Unclaimed Tickets</h1>
    <table>
        <tr>
            <th>Priority</th>
            <th>Status</th>
            <th>Title</th>
            <th>Made</th>
            <th>History</th>
        </tr>
        {% for ticket in allMadeTickets  %}
            <tr>
                <td>{{ ticket.priority }}</td>
                <td>{{ ticket.status }}</td>
                <td>{{ ticket.title }}</td>
                <td>{{ ticket.time|date("m-d H:i") }}</td>
                <td><button><a href="/index.php/comment/{{ ticket.id }}">History</a></button></td>
            </tr>
        {% endfor %}
    </table>
<h1>In Progress</h1>
<table>
    <tr>
        <th>Priority</th>
        <th>Status</th>
        <th>Title</th>
        <th>Made</th>
        <th>History</th>
        <th>Agent Assigned</th>
    </tr>
    {% for ticket in AssTickets %}
    <tr>
        <td>{{ ticket.priority }}</td>
        <td>{{ ticket.status }}</td>
        <td>{{ ticket.title }}</td>
        <td>{{ ticket.time|date("m-d H:i") }}</td>
        <td><button><a href="/index.php/comment/{{ ticket.id }}">History</a></button></td>
        <td>{{ ticket.agentid.getFirstname() }} {{  ticket.agentid.getLastname() }}</td>
        <td><button>High Priority</button></td>
        <td><button>Medium Priority</button></td>
        <td><button>Low Priority</button></td>
    </tr>
    {% endfor %}
</table>
<form method="post">
<button type="submit" name="SHUTUPNEIL">UNCLAIM ALL!</button>
</form>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>
        <a href="{{ path('app_logout') }}">Logout</a>
    </p>
    <p>
        <a href="{{ path('manager_tools') }}">Tools</a>
    </p>
</div>
{% endblock %}
